extends layout

block content
  div.container
    h1= title
    div.input-append
      input.span2#appendedInputButton(type='text')
      button.btn.h-add(type='button') 添加

    table.table
      thead
        tr
          th 序号
          th 名称
          th 操作
      tbody
        - for(var list in lists)
          tr(data-id=lists[list].id)
            td= lists[list].number
            td= lists[list].name
            td
              a.btn.btn-mini.btn-primary.h-del(href='javascript:;') 删除

block script
    script(src='/lib/bootstrap/js/jquery.js')
    script(src='/javascripts/all.js')
